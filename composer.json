{
  "name": "flavacaster/configs",
  "description": "Library for configurations files organization",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "flavacaster",
      "email": "hoaxer.yacht0r@icloud.com"
    }
  ],
  "require": {
    "php": "~8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "phpunit/php-code-coverage": "*"
  },
  "autoload": {
    "psr-4": {
      "Flavacaster\\Configs\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "./vendor/bin/phpunit --configuration ./tests/phpunit.xml --coverage-text"
    ]
  }
}
